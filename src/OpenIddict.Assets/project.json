{
  "version": "1.0.0-alpha2-*",

  "description": "Contains the default assets used by OpenIddict.",
  "authors": [ "Kévin Chalet" ],
  "owners": [ "Kévin Chalet" ],

  "projectUrl": "https://github.com/openiddict/openiddict-core",
  "licenseUrl": "http://www.apache.org/licenses/LICENSE-2.0.html",

  "repository": {
    "type": "git",
    "url": "git://github.com/openiddict/openiddict-core"
  },

  "tags": [
    "aspnetcore",
    "authentication",
    "jwt",
    "openidconnect",
    "openiddict",
    "security"
  ],

  "compilationOptions": {
    "nowarn": [ "CS1591" ],
    "xmlDoc": true
  },

  "resource": [
    "fonts/*",
    "scripts/*",
    "stylesheets/*"
  ],

  "dependencies": {
    "JetBrains.Annotations": { "type": "build", "version": "10.1.2-eap" },
    "Microsoft.AspNetCore.StaticFiles": "1.0.0-*",
    "Microsoft.Extensions.FileProviders.Embedded": "1.0.0-*",
    "OpenIddict.Core": "1.0.0-*"
  },

  "frameworks": {
    "net451": {
      "frameworkAssemblies": {
        "System.Reflection": { "type": "build", "version": "4.0.0.0" },
        "System.Runtime": { "type": "build", "version": "4.0.10.0" }
      }
    },

    "netstandard1.3": {
      "imports": [
        "dotnet5.4",
        "portable-net451+win8"
      ]
    }
  }
}